# Model Provider Configuration
# Choose: ibm_watson, openai, or ollama
DEFAULT_MODEL_PROVIDER=ibm_watson

# IBM Watson Configuration
IBM_WATSON_URL=https://us-south.ml.cloud.ibm.com
IBM_WATSON_PROJECT_ID=skills-network
IBM_WATSON_API_KEY=

# OpenAI Configuration
OPENAI_API_KEY=

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_NUM_CTX=32768    # Context window size for large prompts
OLLAMA_TIMEOUT=120      # Timeout in seconds for model responses

# Research Model Configuration
# RESEARCH_MODEL_PROVIDER=ibm_watson  # Optional: override default provider
RESEARCH_MODEL_ID=meta-llama/llama-3-2-90b-vision-instruct
RESEARCH_MODEL_TEMPERATURE=0.3
RESEARCH_MODEL_MAX_TOKENS=300

# Verification Model Configuration
# VERIFICATION_MODEL_PROVIDER=ibm_watson  # Optional: override default provider
VERIFICATION_MODEL_ID=ibm/granite-4-h-small
VERIFICATION_MODEL_TEMPERATURE=0.0
VERIFICATION_MODEL_MAX_TOKENS=200

# Relevance Model Configuration
# RELEVANCE_MODEL_PROVIDER=ibm_watson  # Optional: override default provider
RELEVANCE_MODEL_ID=ibm/granite-3-3-8b-instruct
RELEVANCE_MODEL_TEMPERATURE=0.0
RELEVANCE_MODEL_MAX_TOKENS=50  # Increased for classification responses
RELEVANCE_MODEL_TEMPERATURE=0.0
RELEVANCE_MODEL_MAX_TOKENS=10

# Embedding Model Configuration
# EMBEDDING_MODEL_PROVIDER=ibm_watson  # Optional: override default provider
EMBEDDING_MODEL_ID=ibm/slate-125m-english-rtrvr-v2
EMBEDDING_TRUNCATE_INPUT_TOKENS=3
EMBEDDING_RETURN_INPUT_TEXT=true

# Application Settings
# LOG_LEVEL: Controls verbosity of logging
#   DEBUG - Show all logs including detailed debugging info (recommended for development)
#   INFO  - Show informational messages and above (recommended for production)
#   WARNING - Show only warnings and errors
#   ERROR - Show only errors
LOG_LEVEL=DEBUG
CACHE_DIR=document_cache
CACHE_EXPIRE_DAYS=7
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=documents
